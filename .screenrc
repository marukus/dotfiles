startup_message off

hardstatus alwayslastline
hardstatus string "%{= dK}[%H@%S] %= %-Lw%{=b kd}[%n%f %t]%{-}%+Lw %= [%l][%c]"

defscrollback 32000

defutf8 on
altscreen on
autodetach on
nonblock on

escape ^B

bind w windowlist
bind o other

bind c screen 1
bind ^c screen 1
bind 0 select 10

screen 1

bind R eval "source $HOME/.screenrc" "echo '.screenrc reloaded!'"
